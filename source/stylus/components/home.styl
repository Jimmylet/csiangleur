.medecine
  position: relative
  background-color: color-greybackground
  padding 5em 1em 2em 1em // 40px 20px
  margin-top 180px
  &:before
    content ""
    display block
    background-color color-greybackground
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    transform: skewY(2.5deg);
    transform-origin: 100% 0;
    bottom: -26%;
    z-index -1

  &__wrap
    max-width 48em // 960px
    margin 0 auto
    display flex
    justify-content space-between
  &__wrapright
    max-width 24em // 480px
  &__title
