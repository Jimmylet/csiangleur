/************************************\
  ANIMATIONS SERVICES
\************************************/
#heartline
  animation 9s linear 2s infinite heartline


@keyframes heartline{
  0%{
    stroke-dasharray: 146;
    stroke-dashoffset: 438;
  }
  15%{
    stroke-dasharray: 146;
    stroke-dashoffset: 300;
  }
  50%{
    stroke-dasharray: 146;
    stroke-dashoffset: 300;
  }
  65%{
    stroke-dasharray: 146;
    stroke-dashoffset: 188;
  }
  100% {
    stroke-dasharray: 146;
    stroke-dashoffset: 188;
  }
}

#gear1
  transform-origin 33px 29px
  animation 10s linear infinite gear1

#gear2
  transform-origin 40px 42px
  animation 10s linear infinite gear2

@keyframes gear1{
  0%{
    transform: rotate(0deg);
  }
  20%{
    transform: rotate(180deg)
  }
  40%{
    transform rotate(180deg)
  }
  60%{
    transform rotate(0deg)
  }
  100%{
    transform rotate(0deg)
  }

}

@keyframes gear2{
  0%{
    transform: rotate(0deg);
  }
  20%{
    transform: rotate(-180deg);
  }
  40%{
    transform rotate(-180deg)
  }
  60%{
    transform rotate(0deg)
  }
  100%{
    transform rotate(0deg)
  }
}


#thermo{
  transform-origin 50% 50%
  animation 8s ease-in infinite thermo
}

@keyframes thermo{
  0%{
    transform: scaleY(0);
  }
  20%{
    transform: scaleY(18);
  }
  40%{
    transform: scaleY(18);
  }

  60%{
    transform: scaleY(0);
  }

  100%{
    transform: scaleY(0);
  }
}

