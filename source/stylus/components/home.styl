.home
  &__title
    {visuallyhidden}
  .intro
    height 28.15em
    background-image url("../images/homeheader@2x.jpg")
    background-repeat no-repeat
    background-position center center
    background-size cover
    text-align: center
    &__logo
      display: block
      padding-top 3.5em // 70px
      & svg
        display: block
        margin: 0 auto
    &__title
      display: block
      font-family: oxygenfonts
      color color-white
      font-weight: bold
      font-size 2em // 40px
      letter-spacing 1.33px
      margin-top 0.500em // 20px
      margin-bottom 0.625em // 25px
    &__paragraph
      max-width: 27.750em // 555px
      margin: 0 auto
      font-family oxygenfonts
      font-size 1em
      color color-white
      letter-spacing 0.3px
      line-height: 1.6
    &__button
      display inline-block
      color color-white
      font-size 0.900em // 18px
      letter-spacing .5px
      background-color color-darkblue
      padding 0.444em 2.944em // 8px 53px
      border-radius 2px
      margin-top 3.889em // 70px
      transition .3s background-color ease
      &:hover
      &:focus
        background-color color-lightblue
        transition .3s background-color ease

/************************************\
ANIMATION HEADER
\************************************/
.js-active
  .intro__logo
  .intro__title
  .intro__paragraph
    transform translateY(-15px)
    opacity 0
  .intro__button
    transform translateY(25px)
    opacity 0
  .anim-intro
    .intro__logo
    .intro__title
    .intro__paragraph
    .intro__button
      transform translateY(0px)
      opacity 1
    .intro__logo
      transition .8s .5s all ease-in-out
      transition-property transform, opacity
    .intro__title
      transition .8s .8s all ease-in-out
      transition-property transform, opacity
    .intro__paragraph
      transition .8s 1.1s all ease-in-out
      transition-property transform, opacity
    .intro__button
      transition .8s 2s all ease-out
      transition-property transform, opacity


