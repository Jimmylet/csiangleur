  NEWSLETTERS SECTION
\************************************/

.home
  .newsletter
    max-width 29.1em // 582px
    margin 12em auto 7em auto
    text-align center
    &__title
      font normal 1.5em oxygenfonts // 30px
      letter-spacing 0.81px
      line-height 1
    &__subtitle
      display block
      margin-bottom 2.5em
      font normal 1em oxygenfonts
      color color-lightgrey
      letter-spacing 0.3px
    &__details
      display flex
      justify-content space-between
      &__item
        & svg
          margin-bottom 0.650em // 13px
        & p
          font 100 0.8em sourcesansprofonts // 16px
          letter-spacing 0.24px

.newsletter-form
  margin 3em 0 0 0
  & label
    {visuallyhidden}
  & input
    width 226px
    border 2px solid #E8E9ED
    border-radius 6px
    padding 10px 0px 10px 10px
    font-size: 14px
    &::placeholder
      color color-lightgrey
      font-size: 14px
      padding-top 9px
  & button
    position relative
    top -2px
    left -10px
    height 43px
    width 94px
    font-size 10px
    color color-white
    font-weight bold
    text-transform uppercase
    letter-spacing 1px
    border 0
    border-radius 0 6px 6px 0
    background-color color-darkblue
    outline none
    transition .3s background-color ease
    cursor pointer
    &:active
    &:focus
    &:hover
      transition .3s background-color ease
      background-color color-lightblue

.newsletter-out
  position: relative
  top -6px
  font-size: 0.5em // 10px
  color color-lightgrey
  line-height: 1

.js-active
  .newsletter
    &__title
    &__subtitle
      transform translateY(-15px)
      opacity 0
  .anim-titles
    & .newsletter__title
      transform translateY(0px)
      opacity 1
      transition 1s all ease
      transition-property transform, opacity
    & .newsletter__subtitle
      transform translateY(0px)
      opacity 1
      transition 1s .3s all ease
      transition-property transform, opacity
  .newsletter__animate-content
    transform translateY(50px)
    opacity 0
  .animate-content-newsletter
    transform translateY(0px)
    opacity 1
    transition 1s 1s all ease
    transition-property transform, opacity
