.page-error
  &__title
    {visuallyhidden}
  & .bandeau
    background-image url("../images/bandeau_404.jpg")
  & .content
    text-align: center
    max-width 48em // 960px
    margin 5em auto
    padding 0 1em
    &__oops
      display: block
      font-size: 2em
      color color-error
      margin-bottom .25em
    &__title
      color color-lightgrey
      font-size 1.5em
      margin-bottom 1em
    & p
      margin: 0 auto
      color color-lightgrey
      max-width 25em
      margin-bottom 2em
    &__link
      display: inline-block
      background-color color-darkblue
      color color-white
      padding .5em 1em
      border-radius 2px
      transition .2s background-color ease
      &:hover
      &:focus
        background-color color-lightblue
        transition .3s background-color ease
