.fonctionnement-inscription
  &__title
    {visuallyhidden}
  & .bandeau
    background-image url("../images/bandeau_inscription.jpg")
  & .inscription,
  & .desinscription
    padding 5em 1em 7.5em 1em // 100px 20px 150px
    background-image: linear-gradient(-180deg, #FFFFFF 4%, #F6F6F6 66%);
    &__wrap
      margin: 0 auto
      max-width 44.35em
    &__title
      max-width 44.35em
      font normal 1.5em oxygenfonts
      letter-spacing 1px
      text-align: center
      line-height: 1.6
    &__subtitle
      display: block
      margin-top 1em
      text-align: center
      font-weight bold
      letter-spacing 0.6px
    &__list
      margin 5em 0 0 0 // 100px
      counter-reset: section;
    &__item
      counter-increment: section;
      margin-bottom 3.750em // 75px
      &:last-child
        margin-bottom: 0
      &:before
        font normal 1.3em oxygenfonts // 26px
        content: counters(section,".") ". ";
        line-height: 0
      &__title
        font normal 1.3em oxygenfonts // 26px
        letter-spacing 0.5px
        line-height: 1.5
      & p:nth-child(2)
        margin-top: 1.2em // 25px
      & p
        margin-bottom 1em // 20px
        line-height 1.6em
        & strong
          font-weight: bold
        & a
          color color-darkblue
          font-weight: bold
          transition .3s color ease
          &:hover
          &:focus
            color color-lightblue
            transition .3s color ease
    &__city
      display inline-flex
      flex-wrap wrap
      &__item
        font-size 0.800em // 16px
        padding 0.625em 1.563em // 10px 25px
        border-radius 2px
        margin-right 0.625em // 10px
        margin-bottom 10px
        background-color color-white
        color color-darkblue
        letter-spacing 0.3px

/************************************\
  DESINSCRIPTION
\************************************/

.fonctionnement-desinscription
  & p
    line-height: 1.6
    margin-bottom 1em
  .desinscription__intro
    margin 5em 0 3.5em 0 // 100px 75px
  .desinscription__faq
    &__title
      display: block
      font normal 1.3em oxygenfonts // 26px
      letter-spacing 0.5px
      line-height: 1.3
      margin-bottom 0.962em // 25px
    & p:last-child
      margin-bottom 75px


.fonctionnement-inscription
  & .questions
    padding 5em 1em 7.5em 1em // 100px 20px 150px
    background-image: linear-gradient(-180deg, #FFFFFF 4%, #F6F6F6 66%);
    &__wrap
      margin: 0 auto
      max-width 44.35em
    &__title
      margin-bottom 1.167em // 35px
      text-align: center
      font bold 1.5em oxygenfonts // 30px
      letter-spacing 1px
    &__subtitle
      display: block
      font bold 1.300em oxygenfonts // 26px
      letter-spacing 0.87px
      margin-bottom .6em // 15px
      margin-top 2em // 35px
    & p
      font-size: 1em // 18px
      letter-spacing 0.1px
      line-height: 1.6
      margin-bottom 1.111em // 20px
      & a
        font-weight:bold;
        color color-darkblue
        font-size: 1em
        transition .3s color ease
        &:hover
        &:focus
          color color-lightblue
          transition .3s color ease
      & strong
        font-size: 1em
        font-weight: bold
        text-decoration: underline
    & li
      margin-left 1.5em
      list-style disc
