.single-post
  & .single
    padding 0 1em
    &__wrap
      position: relative
      max-width 48em
      margin: 0 auto
    &__title
      font: bold 2em Oxygen, Helvetica, Arial, sans-serif;
      display: block;
      width: 100%;
      margin-top: 2.5em;
      margin-bottom: 1.25em;
      padding-top: .575em;
      padding-bottom: .575em;
      text-align: center;
      letter-spacing: 1px;
      border: 1px solid #ededed;
    &__content
      max-width 38em
      margin 0 auto
    &__content p
    &__content ul li
      line-height 1.6
      margin-bottom 1em
    &__content ul
      margin 1.8em 0
    &__content li
      margin-bottom 1em
      margin-left 20px
      list-style disc
    &__content img
      display: block
      max-width 48em
      width 100%
      height auto
      margin 2.5em auto
    &__content .wp-caption
      margin 2.5em auto
      width auto
    &__content .wp-caption img
      display: block
      margin 2.5em auto 1em auto
      width 100%
      height auto
    &__content .wp-caption-text
      max-width 35em // 700px
      margin: 0 auto
      text-align: center
      color color-lightgrey
      font-style italic
    &__subtitle
      position: relative;
      display: block
      width 100%
      text-align: center
      font bold 2em oxygenfonts
      letter-spacing 1px
      border 1px solid #EDEDED
      padding-top 0.575em // 23px
      padding-bottom 0.575em // 23px
      margin-bottom 1.25em
      margin-top 2.5em
    &__content .single__cause-title,
    &__content .single__traitement-title
      display: block
      margin-bottom 0.66em // 20px
      font bold 1.5em oxygenfonts
      letter-spacing 1px
      font-style: italic
    .single-cause
    .single-traitement
      margin-bottom 2em

.single-post
  .round
    top 14.5em

.single-post
  .article-symptomes
    position: relative;
    background-color #F7F7F7
    padding 0 1em 0.8em 1em
    border-radius 2px
    margin-top 4em
    margin-bottom 4em
    &__title
      display: block
      font bold 2em oxygenfonts
      letter-spacing 1px
      text-align: center
      padding 0.8em 0
    &__content
      position static
      & ul
        margin 0
        & li
          list-style none
          &:before
            content "â€“ ";


.single-post
  .links
    margin-bottom 1em
    &__link
      display: inline-block
      color color-darkblue
      font-weight 900
      margin-bottom .75em
      transition 0.2s color ease
      position: relative
      &:focus
      &:hover
        color color-lightblue
        transition 0.2s color ease
      &:before
        position: relative
        top 7px
        content: '\e904'
        font-family 'icons'
        font-size 1.5em
        color color-greenblue
        margin-right 20px
  .links p
    margin-left 40px !important


@media screen and (max-width: 688px)
  .single-post
    .single__title
      font-size: 1.5em
    .single__content
      top -2em
