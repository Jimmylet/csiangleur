.bandeau
  min-height 12em // 240px
  padding 65px 20px 20px 20px
  background color-darkblue no-repeat center center
  background-size cover
  position: relative
  overflow hidden
  & *
    color color-white
    text-align: center
  &__title
    display: block
    font bold 2em oxygenfonts
    letter-spacing 1.33px

.round
  position absolute
  width 100%
  top: 5em;
  left: 0;
  width: 100%;
  height 240px
  overflow auto
  z-index 1

@media screen and (max-width: 1006px)
  .round
    top 5.5em

@media screen and (max-width: 509px)
  .round
    top 6em


.bandeau-article
  min-height 21em // 420px
  padding 0
  background transparent
  position: relative
  .article__image
    position: absolute
    top: 0
    bottom 0
    left: 0
    right: 0
    background-size cover
    background-position center center
  .bandeau__gradient
    position: absolute
    top 0
    bottom 0
    right 0
    left 0
    opacity 0.85
    display: block
    background-image linear-gradient(-180deg, #2883D2 0%, #46B6A6 100%);
    z-index 1
  .bandeau__title
    position: relative
    z-index 2
    padding-top 4em
  .breadcrumb
    position: relative
    z-index 2


@media screen and (max-width: 587px)
  .bandeau
    &__title
      font-size 1.5em
  .bandeau-article
    min-height 15em // 200px
    .bandeau__title
      padding-top 3.5em

