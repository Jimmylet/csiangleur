.contact
  &__title
    {visuallyhidden}
  & .bandeau
    background-image url("../images/bandeau_contact.jpg")
  & .content
    padding 5em 1em 7.5em 1em // 100px 20px 150px
    background-image: linear-gradient(-180deg, #FFFFFF 4%, #F6F6F6 66%);
    &__wrap
      margin: 0 auto
      max-width 48em // 960px
    &__infos
      &__title-hide
        {visuallyhidden}
      &__logo
        display block
        margin: 0 auto 1em auto
      & span
        display: block
        text-align: center
      &__title
        font bold 1.5em oxygenfonts
        letter-spacing 1px
        margin-bottom .25em // 5px
      &__address
      &__tel
      &__fax
        font normal 1em oxygenfonts
        letter-spacing 0.65px
        &:before
          display inline-block
          font-family icons
          color color-greenblue
          padding-right .4em
      &__address:before
        content "\e902"
      &__tel:before
        content "\e901"
      &__fax:before
        content "\e900"
    &__map
      position: relative
      display: block
      margin 3.75em 0 2.5em 0// 75px
      & span
        position: absolute
        right: .5em
        top .5em
        display inline-block
        background-color rgba(255, 255, 255, .9)
        padding .5em 1em
        border-radius 2px
        opacity 0
        transform translateY(-20px)
        transition .3s all ease
        transition-property opacity, transform, color
        &:hover
        &:focus
          color color-greenblue
      &:hover span
      &:focus span
        opacity 1
        transform translateY(0)
        transition .3s all ease
        transition-property opacity, transform, color


/************************************\
  FORM STYLE
\************************************/

.contact
  .content__form
    &__title
      font bold 1em oxygenfonts
      letter-spacing 0.45px
      margin-bottom 2em // 40px
    & form
      max-width 469px
      & input
        /*height 40px*/
        padding 0.5em .75em // 15p
        font normal 15px oxygenfonts
        margin-bottom 25px
      & label
        font normal 15px oxygenfonts
      & textarea
        width 100%
        height 200px
        padding 10px 10px
        appearance none
        outline none
        resize none
        border none
        border-radius 2px
        font normal 15px oxygenfonts
    & .names__name,
    & .names__firstname,
    & .email
    & .message
      position: relative
    & .names__name label,
    & .names__firstname label,
    & .email label
      position absolute
      z-index 10
      top 7px
      left 10px
      transition .2s all ease
      transition-property top, font-size, font-weight
    & .names
      display flex
      justify-content space-between
    & .names__name
      width 220px
      & input
        width 100%
    & .email
      &__input
        width 100%
    & .message
      line-height 1.2em
      &__label
        position: absolute
        top 10px
        left 10px
        z-index 10
        transition .2s all ease
        transition-property top, font-size, font-weight
    & .send
      margin-top 25px
      margin-bottom 10px
      background-color color-darkblue
      color color-white
      font-size: 16px
      letter-spacing 0.35px
      border-radius 2px
      padding 10px 30px
      cursor pointer
      &:hover
      &:focus
        background-color color-lightblue
        transition .3s background-color ease
      &:active
        transform: scale(0.9)
    & .requiredFields
      display: block
      color #686868
      font-size: 14px

/************************************\
  START ANIMATION JS
\************************************/
.contact
  & .content
    & .names__name .float,
    & .names__firstname .float,
    & .email .float,
    & .message .float
      top -18px
      font-size: 10px;
      font-weight: bold
      transition .2s all ease
      transition-property top, font-size, font-weight

.no-js
  & .content
    & .names__name label,
    & .names__firstname label,
    & .email label,
    & .message label
      top -18px
      font-size: 10px;
      font-weight: bold
      transition .2s all ease
      transition-property top, font-size, font-weight

/************************************\
  HORAIRES GENERAUX
\************************************/

.contact
  & .content
    &__bottom
      display flex
      justify-content space-between
      align-items flex-start
    &__horaires
      max-width 19.4em
      margin-top 3.3em
      background-color color-white
      border-radius 2px
      padding 1.5em // 30px

      &__title
        font bold 1em oxygenfonts
        letter-spacing 0.5px
        margin-bottom: 1em
      & table
        margin-bottom 1.25em // 25px
        & td,
        & tr
          font-size: 16px
          letter-spacing 0.43px
          border-bottom 5px solid color-white
        & td:last-child
          color color-darkblue
          font-weight: 700
        & td:first-child
          padding-right 7em
      &__text
        display: block
        font-weight: 100
        font-size: 16px
        margin-bottom: 30px
        & a
          color color-darkblue
          font-weight: bold
          font-size: 16px
      &__button
        display: block
        font bold 16px oxygenfonts
        text-align: center
        padding 10px 30px
        border 2px
        color color-white
        background-color color-darkblue
        transition .3s background-color ease
        &:hover
        &:focus
          background-color color-lightblue
          transition .3s background-color ease

@media screen and (max-width 938px)
  .contact
    .content
      &__bottom
        display: block
      &__form
        form
          max-width none

  .contact .content__form .names
    display: block
  .contact .content__form .names__name
    width 100%

  .contact .content__horaires
    max-width none



